	}
	nav {
		display: flex;
		place-items: center;
		gap: 1em;
	}
	[hidden] {
		display: none;
	}
	r4-auth-status[auth="true"] [slot="in"][hidden] {
		display: block;
	}
	a {
		color: black;
	}

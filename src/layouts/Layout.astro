---
import Header from '../components/Header.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" sizes="192x192" />
		<!-- <link rel="manifest" href="/manifest.webmanifest" /> -->
		<!-- <meta name="theme-color" content="#5d1ae6" /> -->
		<meta name="og:image" content="https://radio4000.com/favicon.png" />
		<title>{title ? `${title} - R4` : 'R4'}</title>
		<script>
			import '@radio4000/components'
		</script>
		<link rel="preconnect" href="https://fonts.bunny.net">
		<link href="https://fonts.bunny.net/css?family=rosario:400,400i,600,700" rel="stylesheet" />
	</head>
	<body>
		<Header></Header>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--primary: #77ff8e;
		--text: hsl(0, 0%, 5%); 
		--link: black;
	}
	* {
		box-sizing: border-box;
	}
	html {
		color: var(--text);
		background-color: #F6F6F6;
		font-family: Rosario, Segoe UI, system-ui, sans-serif;
	}
	a {
		color: var(--link);
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
	}

	r4-favicon {
		display: block;
	}
	r4-favicon svg {
		width: 100%;
		max-width: 100%;
		height: auto;
	}

	button,
	input,
	select,
	.button {
		font-family: inherit;
		font-size: 1rem;
	}

	button,
	.button {
		display: inline-block;
		background-color: hsl(0, 0%, 97%);
		border: 1px solid;
		padding: 3px 5px;
		border-radius: 3px;
		user-select: none;
		word-spacing: normal;
		line-height: normal;
	}
	button.primary,
	.button.primary {
		background: var(--primary);
	}
	button:focus,
	button:hover,
	.button:focus,
	.button:hover {
		box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.25);
	}
	button[type="submit"] {
		text-transform: capitalize;
	}

	fieldset {
		display: flex;
		flex-flow: row wrap;
	}
	fieldset label {
		min-width: 6rem;
	}
	fieldset input,
	fieldset textarea {
		flex: 1;
	}
</style>
